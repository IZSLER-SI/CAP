@model IZSLER_CAP.Models.RichiestaWorkflowModel
@{
    ViewBag.Title = "RichiestaWorkflow";
    Layout = "~/Views/Shared/_LayoutClear.cshtml";
}
@using IZSLER_CAP.Helpers  
<table  class="table responsive-table" id="sorting-trackingRichiesta">
 <thead>
            <tr>
                <th scope="col" width="10%" class="align-center" >Data</th>
                <th scope="col" width="15%" class="align-center hide-on-mobile">Utente</th>
		        <th scope="col" width="15%" class="align-center hide-on-mobile-portrait">Titolo</th>
                
                
                <th scope="col" width="5%" class="align-center">Priorit&agrave;</th>
                <th scope="col" width="5%" class="align-center">Tipo</th>
		        <th scope="col" width="5%" class="align-center">Stato</th>
            </tr>
        </thead>
        <tfoot>
		    <tr>
			    <td colspan="7">
				    @Model.ElencoRichieste.Count().ToString() Tracking presenti
			    </td>
		    </tr>
	    </tfoot>
        <tbody>
        @foreach (var item in Model.ElencoRichieste.OrderByDescending(z=>z.Trkric_id) )
        { 
            <tr>
            
            <td class="align-center">@Html.GetDateTimeFormat(item.Trkric_data_ins) &nbsp; @Html.GetDateTimeHourFormat(item.Trkric_data_ins)</td>
            <td >@Html.DisplayFor(modelItem =>item.Trkric_utente_cognome)&nbsp;@Html.DisplayFor(modelItem => item.Trkric_utente_nome)  </td>
            <td class="with-tooltip" title="@item.Trkric_testo">@Html.DisplayFor(modelItem => item.Trkric_titolo)</td>
            
            <td class="align-center hide-on-tablet"><small class="tag @item.Trkric_t_ricpri_color-bg"><label for="@item.Trkric_t_ricpri_color">@item.Trkric_t_ricpri_desc</label></small></td>
            <td class="align-center hide-on-tablet"><small class="tag @item.Trkric_t_richie_color-bg"><label for="@item.Trkric_t_richie_color">@item.Trkric_t_richie_desc</label></small></td>  
            <td class="align-center">@Html.DisplayFor(modelItem => item.Trkric_t_staric_desc)</td>
            
            </tr>
        }
        </tbody>
</table> 
 <script  type ="text/javascript">     loadScriptRef("startPopupRichiesteWF.js");</script>

