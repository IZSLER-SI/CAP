<script type="text/javascript">
function toggleEsplosi(field,id)
{
    //var idFiglio = 'child_' + id.toString();
    //$('#' + idFiglio).toggle();

    var idFiglio = id;
    $('#' + idFiglio).toggle();

    var idFather = 'expandable_open_button' + id.toString();
    var val = $('#' + idFather).html();
   // alert(val);
    if(val=="+")
        $('#' + idFather).html("-");
    else
        $('#' + idFather).html("+");
    
}
</script>