@model IZSLER_CAP.Models.ListaMacchinari
@{
    ViewBag.Title = "Apparecchiature dedicate";
}

@using IZSLER_CAP.Helpers
<script type="text/javascript">
    function callAjax(urlSave, emp) {
        $.ajax
        (
            {
                type: "POST",
                url: urlSave,
                data: JSON.stringify(emp),
                datatype: "JSON",
                contentType: "application/json; charset=utf-8",
                success: function (retdata) {
                    $("#myGridMacchinari").html(retdata.partial);
                }
            }
        );
    }
</script>
    <hgroup id="main-title" class="thin">
		<h1>@Html.Raw(Html.RedirectToSettings((string)ViewBag.Message))</h1>
		<h2><strong>@Html.GetDateDayFormat(DateTime.Now)</strong>&nbsp;@Html.GetHeaderDate(DateTime.Now)</h2>
            
    </hgroup>
    
    <div class="with-padding">
    <p class="button-height">
        @Html.ActionLink("Inserimento nuovo macchinario", "../Settings/MacchinarioInsert", null, new { Class = "button icon-plus-round green-gradient glossy" })
        &nbsp;
        <a href="/Content/Help/Manuale utente CAP.htm#Attrezzature dedicate" target="_blank" class="button anthracite-gradient glossy">Help</a>
    </p>
    @Html.Partial("_Macchinari")
    </div>
