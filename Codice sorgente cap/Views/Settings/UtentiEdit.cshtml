@model IZSLER_CAP.Models.UtentiModel 
@functions
{

    public string GetChecked(bool Utente_Lock)
    {
        if (Utente_Lock)
            return "checked";
        else
            return null;
    }
   
    
}
@using IZSLER_CAP.Helpers
       


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<hgroup id="main-title" class="thin">
			<h1>@Html.Raw(Html.RedirectToSettings((string)ViewBag.Message))</h1>
			<h2><strong>@Html.GetDateDayFormat(DateTime.Now)</strong>&nbsp;@Html.GetHeaderDate(DateTime.Now)</h2>
            
</hgroup>

<div class="with-padding">

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    
    <details class="details margin-bottom" open>
               <summary>Modifica Utente</summary>
               <div class="with-padding">

<input type ="hidden" id="Utente_id" value="@Model.CurrentUtente.Utente_ID"/>
<table  width ="100%">
<tr style="height:40px;">
<td colspan ="2">&nbsp;</td></tr> 
<tr style="height:40px;">
<td colspan ="2">
 <p class="button-height inline-label">
<label for="input-1" class="label">Utente di dominio</label>
  <input class="input with-tooltip" data-tooltip-options='{"classes":["anthracite-gradient"],"position":"right"}' id="txtUtenteDom" maxlength="150" name="txtUtenteDom" title="Campo obbligatorio" type="text" value="@Model.CurrentUtente.Utente_User" />
  </p>
</td>
</tr>
<tr style="height:40px;">
<td colspan ="2">
 <p class="button-height inline-label">
<label for="input-1" class="label">Nome</label>
  <input class="input with-tooltip" data-tooltip-options='{"classes":["anthracite-gradient"],"position":"right"}' id="txtNome" maxlength="50" name="txtNome" title="Campo obbligatorio" type="text" value="@Model.CurrentUtente.Utente_Nome" />
  </p>
</td>
</tr>
<tr style="height:40px;">
<td colspan ="2">
 <p class="button-height inline-label">
<label for="input-1" class="label">Cognome</label>
  <input class="input with-tooltip" data-tooltip-options='{"classes":["anthracite-gradient"],"position":"right"}' id="txtCognome" maxlength="50" name="txtCognome" title="Campo obbligatorio" type="text" value="@Model.CurrentUtente.Utente_Cognome" />
  </p>
</td>
</tr>
<tr style="height:40px;">
<td colspan ="2">
 <p class="button-height inline-label">
<label for="input-1" class="label">Email</label>
  <input class="input with-tooltip" data-tooltip-options='{"classes":["anthracite-gradient"],"position":"right"}' id="txtEmail" maxlength="150" name="txtEmail" title="Campo obbligatorio" type="text" value="@Model.CurrentUtente.Utente_Email" />
  </p>
</td>
</tr>
<tr style="height:40px;">
<td colspan ="2">
 <p class="button-height inline-label">
<label for="input-1" class="label">Bloccato</label>
 <input type="checkbox" name="checkbox_lock" id="checkbox_lock" value="" @GetChecked(@Model.CurrentUtente.Utente_Lock)/>
  </p>
</td>
</tr>

<tr style="height:40px;"><td colspan=2>&nbsp;</td></tr>

<tr style="height:40px;">
<td colspan ="2" style="width:100px" >
 <p class="button-height">
 <a href="javascript:saveUtenti();" class="button green-gradient glossy">Salva</a>
 &nbsp;
 @Html.ActionLink("Torna alla lista", "Utenti", null, new { Class = "button green-gradient glossy" })
 &nbsp;
 <a href="/Content/Help/Manuale utente CAP.htm#Modifica utente esistente" target="_blank" class="button anthracite-gradient glossy">Help</a>

 </p>
</td>
</tr>

</table>
</div>
</details>
}

</div>
<script type ="text/javascript">    loadScriptRef("startUtenti.js");</script>