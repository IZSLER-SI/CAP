@{
    ViewBag.Title = "Analisi";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_LayoutOpen.cshtml";
}
@model IZSLER_CAP.Models.ListaAnalisiModel
@using IZSLER_CAP.Helpers
 <script type="text/javascript">
     function callAjax(urlSave, emp) {
         $.ajax
        (
            {
                type: "POST",
                url: urlSave,
                data: JSON.stringify(emp),
                datatype: "JSON",
                contentType: "application/json; charset=utf-8",
                success: function (retdata) {
                    $("#myGrid").html(retdata.partial);
                }
            }
        );
     }
    </script>


    <div class="with-padding">
     @*Gestione bottonoi*@
     <hgroup id="main-title" class="thin">
			<h1>@ViewBag.Message</h1>
			<h2><strong>@Html.GetDateDayFormat(DateTime.Now)</strong>&nbsp;@Html.GetHeaderDate(DateTime.Now)</h2>
            
     </hgroup>
     <p class="button-height">
     @if (@Html.IsVisible(CAAnalisi.BT_ANAL_VALORIZZ))
     {
        
            @Html.ActionLink("Richiesta nuova valorizzazione", "../Home/RichiesteInsert", new
       {
           origine = "analisi_index"@*, chiave = 5 *@}, new { Class = "button icon-plus-round green-gradient glossy" })
         
     }&nbsp;
     @if (@Html.IsVisible(CAAnalisi.BT_ANAL_SALVA))
     {
        @Html.ActionLink("Prova di valorizzazione", "NuovaValorizzazioneTest", null, new { Class = "button icon-plus-round green-gradient glossy" })
     }
     
     <a href="/Content/Help/Manuale utente CAP.htm#Elenchi" target="_blank" class="button anthracite-gradient glossy">Help</a>
     
     </p>

  @Html.Partial("_Index")
    
    </div>


