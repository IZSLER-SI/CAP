   <script type="text/javascript" >
       // prepare the form when the DOM is ready
       $(document).ready(function () {

           // Setup the ajax indicator
           $('body').append('<div id="ajaxBusy"><p><img src="../../Content/img/standard/loaders/refreshing64.gif"/></p></div>');
           var posCenterW = $(window).width() / 2;
           var posCenterH = $(window).height() / 2;
           $('#ajaxBusy').css({
               display: "none",
               margin: "0px",
               paddingLeft: "0px",
               paddingRight: "0px",
               paddingTop: "0px",
               paddingBottom: "0px",
//               position: "absolute",
               position: "fixed",
               right: posCenterW + "px",
               //right: "100px",
               top: posCenterH + "px",
               //top: "100px",
               width: "auto",
               'z-index': 999999
           });
       });

       // Ajax activity indicator bound to ajax start/stop document events
       $(document).ajaxStart(function () {
           $('#ajaxBusy').show();
       }).ajaxStop(function () {

           $('#ajaxBusy').hide();
       }); 
   </script>
