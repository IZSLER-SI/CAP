            var fileref = document.createElement('script')
            fileref.setAttribute("type", "text/javascript")
            fileref.setAttribute("src", "../../Scripts/js/" + filename);
   
            if (typeof fileref != "undefined") {
                 lstFile.push(fileref);
            }
        }

        function loadScript(scriptVal) {

            var scriptInfo = document.createElement('script')
            scriptInfo.setAttribute("type", "text/javascript")
            scriptInfo.text = scriptVal;


            if (typeof scriptInfo != "undefined") {
                lstScript.push(scriptInfo);
            }
        }

        function loadAllJS() {
            var l = lstFile.length;
            for (i = 0; i < l; i++) {
                var fileref = lstFile[i];
